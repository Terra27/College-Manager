<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <!-- Dummy TextView to fill some space -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:text=""/>

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@id/assignmentCard"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        card_view:cardCornerRadius="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@id/assignmentImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="Subject Image"
                android:layout_centerHorizontal="true"
                android:layout_above="@id/assignmentTitle"
                />

            <TextView
                android:id="@id/assignmentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"/>

            <TextView
                android:id="@+id/by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/assignmentTitle"
                android:text="By" />

            <TextView
                android:id="@id/assignmentProfessor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/by"
                android:paddingBottom="5dp"/>

            <TextView
                android:id="@id/assignmentDueDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/assignmentProfessor"
                android:paddingBottom="5dp"
                />

            <ImageView
                android:id="@id/downloadImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/assigndown"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/assignmentDueDate"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Dummy TextView to fill some space -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:text=""/>
</LinearLayout>